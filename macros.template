macro msource
\topen download
\tbin
\tlcd ~/websites/mmail-ftp
\tput mmail-$1.$2.tar.gz mmsrc$1$2.zip
\tput mmdos$1$2.zip mmxt$1$2.zip mmwin$1$2.zip mmos2$1$2.zip
\tput mm-linux-alpha.gz mm-linux-i386elf.gz 
\tput mm-linux-arm.gz mm-linux-sparc.gz mm-netbsd-m68k.gz
\tput mm-solaris-i386.gz mmail-$1.$2.bin.1.tgz
\tclose
end

macro msun
\topen sunsite
\tbin
\tcd /incoming/Linux
\tlcd ~/source/offline-readers
\tput mmail-$1.$2.lsm mmail-$1.$2.tar.gz
\tclose
end

macro mhobbes
\topen hobbes
\tbin
\tcd /pub/incoming
\tlcd ~/websites/mmail-ftp
\tput mmsrc$1$2.zip
\tlcd mmail-bin
\tput mmos2$1$2.zip
\tlcd ~/uploading/hobbes
\tput mm*.txt
\tclose
end

macro mrelease
\tmsource
\tmsun
\tmhobbes
end
